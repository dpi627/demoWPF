<Window x:Class="FilePathGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilePathGenerator"
        mc:Ignorable="d"
        Title="File Path SQL Syntax Generator" Height="400" Width="600" WindowStartupLocation="CenterScreen" MinHeight="400" MinWidth="600">
    <Grid>
        <Button Content="Select Directory" Click="SelectDirectory_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontFamily="Segoe UI" Padding="10,5,10,9"/>
        <Button Content="Copy All" Click="CopyFilePath_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontFamily="Segoe UI"  Padding="10,5,10,9"/>
        <ListBox Name="FilePathList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,50,10,10" FontFamily="Segoe UI" />
    </Grid>
</Window>
